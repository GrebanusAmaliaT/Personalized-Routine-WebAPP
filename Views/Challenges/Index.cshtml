@{
    ViewData["Title"] = "Self-Care Challenges";
}

<div class="container mt-5">
    <div class="text-center mb-4" id="dailyChallenge">
        <h2 class="fw-bold">🌱 Daily Self-Care Challenge</h2>
        <p id="challengeText" class="fw-semibold"></p>
        <button id="doneButton" class="btn btn-success btn-sm mt-2">✅ I completed this!</button>
        <p class="mt-2" id="challengeStatus"></p>
        <span id="badgeCounter" class="badge bg-success mt-2" style="font-size: 1rem;"></span>
    </div>
</div>

<ul id="historyList" class="list-group mt-4"></ul>

<h2> You are this close to completing all challenges:</h2>
<!-- Progress bar -->
<div class="progress mt-3" style="height: 25px;">
    <div id="progressBar" class="progress-bar progress-bar-striped bg-info" role="progressbar"
         style="width: 0%;" aria-valuemin="0" aria-valuemax="30">
        0/30 days
    </div>
</div>

<!-- Badge earned section -->
<div id="earnedBadge" class="mt-3 fs-5 fw-bold text-success"></div>

<button id="resetProgress" class="btn btn-outline-danger btn-sm mt-3">Reset Progress</button>

@section Scripts {
    <script src="~/js/challenges.js"></script>
}
