@model AplicatieRutina.Models.JournalEntry
@{
    ViewData["Title"] = "Delete Journal Entry";
}
<link rel="stylesheet" href="~/css/journal.css" />

<div class="journal-delete-container">
    <h2>🗑️ Delete Entry for @Model.Date.ToString("dddd, dd MMMM yyyy")</h2>

    <p class="mt-3">Are you sure you want to delete this journal entry?</p>
    <blockquote class="blockquote bg-light p-3 rounded">@Model.Content</blockquote>

    <form asp-action="DeleteConfirmed" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">🗑️ Delete</button>
        <a asp-action="Summary" class="btn btn-secondary ms-2">↩️ Cancel</a>
    </form>
</div>
